{
  "name": "mcp-typescript-simple",
  "version": "1.0.0",
  "description": "A simple MCP server built with TypeScript",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "test": "jest --passWithNoTests",
    "test:ci": "npx tsx test/ci-test.ts",
    "test:mcp": "npx tsx test/test-mcp.ts",
    "test:interactive": "npx tsx test/interactive-client.ts",
    "test:all": "npm run test:ci",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run build && npm run test:ci"
  },
  "keywords": [
    "mcp",
    "typescript",
    "server"
  ],
  "author": "Jeff Dutton",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.18.0",
    "openai": "^5.21.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
