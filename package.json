{
  "name": "mcp-typescript-simple",
  "version": "1.0.0",
  "description": "A simple MCP server built with TypeScript",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:vercel": "tsc && cp -r api build/",
    "dev": "tsx src/index.ts",
    "dev:sse": "MCP_MODE=sse MCP_DEV_SKIP_AUTH=true tsx src/index.ts",
    "dev:oauth": "MCP_MODE=sse tsx src/index.ts",
    "dev:vercel": "vercel dev",
    "start": "node build/index.js",
    "start:sse": "MCP_MODE=sse node build/index.js",
    "deploy:vercel": "vercel --prod",
    "test": "jest --passWithNoTests",
    "test:ci": "npx tsx test/ci-test.ts",
    "test:mcp": "npx tsx test/test-mcp.ts",
    "test:interactive": "npx tsx test/interactive-client.ts",
    "test:dual-mode": "npx tsx examples/test-dual-mode.ts",
    "test:vercel-config": "npx tsx test/vercel-config-test.ts",
    "test:transport": "npx tsx test/transport-test.ts",
    "test:all": "npm run test:ci",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run build && npm run test:ci"
  },
  "keywords": [
    "mcp",
    "typescript",
    "server"
  ],
  "author": "Jeff Dutton",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "google-auth-library": "^10.3.0",
    "helmet": "^8.1.0",
    "openai": "^5.21.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vercel/node": "^5.3.23",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vercel": "^48.1.0"
  }
}
