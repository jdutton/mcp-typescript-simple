{
  "title": "OCSF Security Events",
  "tags": ["ocsf", "security", "audit"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "OCSF Events by Class",
      "type": "piechart",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum by (ocsf_class_name) (count_over_time({service_name=\"mcp-typescript-simple\"} | json | ocsf_class_name != \"\" [$__interval]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "legendFormat": "{{ocsf_class_name}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "pie"
      }
    },
    {
      "id": 2,
      "title": "Total OCSF Events",
      "type": "stat",
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum(count_over_time({service_name=\"mcp-typescript-simple\"} | json | ocsf_class_name != \"\" [1h]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "blue"},
              {"value": 10, "color": "green"},
              {"value": 100, "color": "yellow"}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 3,
      "title": "OCSF Activity by Type",
      "type": "stat",
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum by (ocsf_activity_name) (count_over_time({service_name=\"mcp-typescript-simple\"} | json | ocsf_activity_name != \"\" [1h]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "legendFormat": "{{ocsf_activity_name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "orientation": "vertical",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 4,
      "title": "OCSF Events Timeline",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 10
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum by (ocsf_class_name) (rate({service_name=\"mcp-typescript-simple\"} | json | ocsf_class_name != \"\" [$__interval]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "legendFormat": "{{ocsf_class_name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "showPoints": "auto"
          },
          "unit": "events/s"
        }
      }
    },
    {
      "id": 5,
      "title": "OCSF Event Details",
      "type": "logs",
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 18
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "{service_name=\"mcp-typescript-simple\"} | json | ocsf_class_name != \"\"",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    }
  ],
  "editable": true,
  "uid": "ocsf-security",
  "fiscalYearStartMonth": 0
}
