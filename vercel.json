{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": null,
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    },
    {
      "source": "/mcp",
      "destination": "/api/mcp"
    },
    {
      "source": "/auth/(.*)",
      "destination": "/api/auth"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/api/admin"
    }
  ],
  "functions": {
    "api/mcp.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/auth.ts": {
      "maxDuration": 15,
      "memory": 512
    },
    "api/health.ts": {
      "maxDuration": 10,
      "memory": 256
    },
    "api/admin.ts": {
      "maxDuration": 20,
      "memory": 512
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
