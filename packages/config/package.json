{
  "name": "@mcp-typescript-simple/config",
  "version": "0.9.1-rc.1",
  "description": "Extensible configuration management for MCP servers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./environment": {
      "types": "./dist/environment.d.ts",
      "import": "./dist/environment.js"
    },
    "./secrets": {
      "types": "./dist/secrets/index.d.ts",
      "import": "./dist/secrets/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "validate": "npm run typecheck && npm run lint && npm run build"
  },
  "dependencies": {
    "@mcp-typescript-simple/observability": "*",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^3.0.4"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdutton/mcp-typescript-simple.git",
    "directory": "packages/config"
  },
  "keywords": [
    "mcp",
    "config",
    "configuration",
    "environment",
    "secrets"
  ]
}
