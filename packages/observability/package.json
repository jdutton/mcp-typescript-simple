{
  "name": "@mcp-typescript-simple/observability",
  "version": "0.9.0-rc.8",
  "description": "Production-ready OpenTelemetry observability for MCP servers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./register": {
      "types": "./dist/register.d.ts",
      "import": "./dist/register.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    },
    "./logger": {
      "types": "./dist/logger.d.ts",
      "import": "./dist/logger.js"
    },
    "./metrics": {
      "types": "./dist/metrics.d.ts",
      "import": "./dist/metrics.js"
    },
    "./tracing": {
      "types": "./dist/tracing.d.ts",
      "import": "./dist/tracing.js"
    },
    "./session-correlation": {
      "types": "./dist/session-correlation.d.ts",
      "import": "./dist/session-correlation.js"
    },
    "./instrumentation-edge": {
      "types": "./dist/instrumentation-edge.d.ts",
      "import": "./dist/instrumentation-edge.js"
    },
    "./ocsf": {
      "types": "./dist/ocsf/index.d.ts",
      "import": "./dist/ocsf/index.js"
    },
    "./ocsf/types": {
      "types": "./dist/ocsf/types/index.d.ts",
      "import": "./dist/ocsf/types/index.js"
    },
    "./ocsf/builders": {
      "types": "./dist/ocsf/builders/index.d.ts",
      "import": "./dist/ocsf/builders/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.56.0",
    "@opentelemetry/auto-instrumentations-node": "^0.64.1",
    "@opentelemetry/exporter-logs-otlp-http": "^0.205.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.205.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-logs": "^0.205.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "eslint-plugin-sonarjs": "^3.0.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "mcp",
    "observability",
    "opentelemetry",
    "otel",
    "telemetry",
    "logging",
    "tracing",
    "metrics",
    "ocsf",
    "audit",
    "security",
    "compliance"
  ],
  "author": "Jeff Dutton",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdutton/mcp-typescript-simple.git",
    "directory": "packages/observability"
  }
}
