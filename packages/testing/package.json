{
  "name": "@mcp-typescript-simple/testing",
  "version": "0.1.0",
  "description": "Reusable MCP testing framework with port management, process utilities, and Playwright helpers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./port-utils": {
      "types": "./dist/port-utils.d.ts",
      "import": "./dist/port-utils.js"
    },
    "./port-registry": {
      "types": "./dist/port-registry.d.ts",
      "import": "./dist/port-registry.js"
    },
    "./process-utils": {
      "types": "./dist/process-utils.d.ts",
      "import": "./dist/process-utils.js"
    },
    "./test-setup": {
      "types": "./dist/test-setup.d.ts",
      "import": "./dist/test-setup.js"
    },
    "./signal-handler": {
      "types": "./dist/signal-handler.d.ts",
      "import": "./dist/signal-handler.js"
    },
    "./env-helper": {
      "types": "./dist/env-helper.d.ts",
      "import": "./dist/env-helper.js"
    },
    "./mcp-inspector": {
      "types": "./dist/mcp-inspector.d.ts",
      "import": "./dist/mcp-inspector.js"
    },
    "./mock-oauth-server": {
      "types": "./dist/mock-oauth-server.d.ts",
      "import": "./dist/mock-oauth-server.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "vitest": "^3.0.0",
    "playwright": "^1.49.0",
    "@modelcontextprotocol/inspector": "^0.1.0"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    },
    "@modelcontextprotocol/inspector": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "mcp",
    "testing",
    "test-utilities",
    "port-management",
    "playwright",
    "test-framework"
  ],
  "author": "Jeff Dutton",
  "license": "MIT"
}
