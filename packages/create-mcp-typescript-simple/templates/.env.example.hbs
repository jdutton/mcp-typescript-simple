# === CRITICAL: Security ===
# üîê UNIQUE encryption key generated for THIS server
# NEVER commit this file with real values to git!
TOKEN_ENCRYPTION_KEY="{{tokenEncryptionKey}}"

# === Server Configuration ===
HTTP_PORT={{basePort}}
NODE_ENV=development
MCP_MODE=streamable_http

# === LLM Providers (OPTIONAL - gracefully degrades without keys) ===
# Claude
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI GPT
OPENAI_API_KEY=sk-xxxxx

# Google Gemini
GOOGLE_API_KEY=xxxxx

# === OAuth Providers (OPTIONAL - gracefully degrades without keys) ===
# Google OAuth
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxx
GOOGLE_REDIRECT_URI=http://localhost:{{basePort}}/auth/callback/google
GOOGLE_SCOPES=openid,email,profile

# GitHub OAuth
GITHUB_CLIENT_ID=xxxxx
GITHUB_CLIENT_SECRET=xxxxx
GITHUB_REDIRECT_URI=http://localhost:{{basePort}}/auth/callback/github
GITHUB_SCOPES=read:user,user:email

# Microsoft OAuth
MICROSOFT_CLIENT_ID=xxxxx
MICROSOFT_CLIENT_SECRET=xxxxx
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:{{basePort}}/auth/callback/microsoft
MICROSOFT_SCOPES=openid,email,profile

# === Redis (for session persistence and horizontal scaling) ===
REDIS_URL=redis://localhost:6379
