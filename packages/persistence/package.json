{
  "name": "@mcp-typescript-simple/persistence",
  "version": "0.1.0",
  "description": "Pluggable persistence layer for MCP servers with memory, file, and Redis support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "validate": "npm run typecheck && npm run lint && npm run build"
  },
  "dependencies": {
    "@mcp-typescript-simple/config": "workspace:*",
    "ioredis": "^5.4.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^3.0.4"
  },
  "license": "MIT"
}
